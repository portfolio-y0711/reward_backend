{
  "moduleFileExtensions": [
    "json",
    "ts",
    "js"
  ],
  "rootDir": ".",
  "testMatch": [
    "<rootDir>./tests/_unit/_1_routers/**/*test.ts",
    "<rootDir>./tests/_unit/_2_controllers/**/*test.ts",
    "<rootDir>./tests/_unit/_3_services/**/*test.ts"
  ],
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(t)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/(.*)$": "<rootDir>/src/$1",
    "@tests/(.*)$": "<rootDir>/tests/$1"
  },
  "restoreMocks": true,
  "clearMocks": true,
  "bail": 1,
  "reporters": [
      "default",
      ["jest-html-reporters", {
        "publicPath": "./src/static",
        "filename": "unit.html",
        "expand": false,
        "openReport": true
      }]
  ]
}
